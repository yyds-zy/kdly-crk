<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.crk.kdly">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CpApp"
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        tools:ignore="GoogleAppIndexingWarning"
       >
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity
            android:name=".kdly.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" >

        </activity>
        <activity
            android:name=".kdly.InOneActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" >
        </activity>
      <!--  <activity
            android:name="InTwoActivity"
            android:label="@string/title_activity_in_two" >
        </activity>-->
        <activity
            android:name=".kdly.OutOneActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name=".kdly.WelcomeActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".kdly.InYuanLiaoActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".kdly.OutYuanLiaoActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity
            android:name=".kdly.IntuikurukuinActivtity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" >
        </activity>

    </application>

</manifest>
